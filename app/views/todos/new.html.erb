<h1>
  Create a new todo
</h1>

<%= form_for @todo  do |f| %>
  <p>
    <%= f.label :name %>  <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
  <%= f.submit %>  
  </p>
<% end %>

<%-# label because it's the label, :name is the DB column%>